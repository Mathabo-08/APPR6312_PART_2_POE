@page "/"
@layout EmptyLayout

<div class="welcome-container">
    <div class="welcome-content">
        <img src="/images/logo.png" alt="Gift of the Givers Logo" class="logo" />
        <h1 class="title">Gift of the Givers</h1>
        <p class="subtitle">F o u n d a t i o n</p>
        <div class="action-buttons">
            <button class="btn btn-primary-custom" @onclick="NavigateToLogin">Login</button>
            <button class="btn btn-secondary-custom" @onclick="NavigateToRegister">Register</button>
        </div>
    </div>
</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = null!;

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void NavigateToRegister()
    {
        NavigationManager.NavigateTo("/register");
    }
}